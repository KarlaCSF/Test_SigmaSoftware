{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/no-extraneous-class": "off",
        "@typescript-eslint/no-misused-promises": "off"
    },
    "overrides": [
        {
        "files": ["tests/**/*"],
        "env": {
            "jest": true
        }
        }
    ]
}
